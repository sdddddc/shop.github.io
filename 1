<script>
    let url = "http://northbank.shop/plugin/aplayer/api/metingApi"+ "?server="+"netease"+"&type=playlist&id=" + "8613415254";


    let autoplay = Boolean("1");
    let listFolded = Boolean("");
    let lrcType = Number("3")

    $.ajax({
        type: "GET",
        url: url,
        dataType: "json",
        success: function (data) {
            const ap = new APlayer({
                container: document.getElementById('aplayer'),
                fixed: true,//吸底盘
                order: "list",//循环顺序
                volume: "0.7",//音量大小
                mutex: true,//互斥，阻止多个播放器同时播放，当前播放器播放时暂停其他播放器
                listFolded: listFolded,//列表默认折叠
                autoplay: autoplay,//自动播放
                lrcType: lrcType,
                audio: data
            });
        }
    });
